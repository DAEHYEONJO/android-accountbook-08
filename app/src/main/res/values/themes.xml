    <!-- Date Picker -->
    <style name="AppTheme.DatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColorPrimaryInverse">@color/primary_light_purple_100
        </item> <!--MM월DD일(E)색-->
        <item name="android:textColorSecondaryInverse">@color/primary_purple_100</item> <!--년도색-->
        <item name="colorAccent">@color/primary_off_white_100</item><!--header background-->
        <item name="android:windowBackground">@color/primary_off_white_100
        </item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/primary_yellow_100
        </item> <!--selected day-->
        <item name="android:colorControlHighlight">@color/primary_yellow_100</item>
        <item name="android:textColorPrimary">@color/primary_light_purple_100
        </item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/primary_purple_100
        </item>    <!--days of the week-->
    </style>

