<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.setting.SettingFragment"
        android:background="@color/primary_off_white_100"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/setting_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_off_white_100"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/setting_tool_bar_tb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetStart="0dp">

                <TextView
                    android:id="@+id/setting_app_bar_title_tv"
                    style="@style/Widget.TextView.KopubWorldDotumPro18_Purple100_Medium.Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/app_base_space_16"
                    android:layout_marginEnd="@dimen/app_base_space_16"
                    android:gravity="center"
                    android:text="@string/app_bar_title_setting" />

            </androidx.appcompat.widget.Toolbar>

            <View
                android:id="@+id/setting_app_bar_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_purple_100" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/setting_compose_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>