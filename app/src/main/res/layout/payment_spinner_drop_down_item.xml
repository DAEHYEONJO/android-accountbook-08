<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/spinner_item_payment_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/app_base_space_16"
        android:layout_marginTop="@dimen/app_base_space_16"
        style="@style/Widget.TextView.KopubWorldDotumPro14_Purple100_Bold.Style"
        android:text="현대카드"/>

    <ImageView
        android:id="@+id/spinner_item_payment_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/spinner_item_payment_tv"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_item_payment_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/app_base_space_16"
        android:src="@drawable/ic_add_purple"/>
</androidx.constraintlayout.widget.ConstraintLayout>